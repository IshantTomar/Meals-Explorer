<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
</head>
<body>
  <img src="<%= meals.strMealThumb %>" alt="<%= meals.strMeal %>">
  <h1><%= meals.strMeal %></h1>
  <h3>Ingredients</h3>
  <ol>
    <% for (let i = 1; i <= 20; i++) { 
         const ing = meals['strIngredient' + i];
         const measure = meals['strMeasure' + i];
         if (ing && ing.trim() !== '') { %>
      <li><%= measure %> <%= ing %></li>
    <% } } %>
  </ol>
  <h3>Instructions</h3>
  <pre><%= meals.strInstructions %></pre>
</body>
</html>
